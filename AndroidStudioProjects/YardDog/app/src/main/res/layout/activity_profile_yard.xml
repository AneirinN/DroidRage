<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="droidrage.yarddog.Profile"
    android:id="@+id/activity_profile"
    android:gravity="center_vertical"
    android:background="@color/green">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/fy"
        android:contentDescription="@string/profileyard"
        android:layout_alignParentTop="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/img.edit"
        android:id="@+id/image.edit"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:enabled="true"
        android:longClickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/include.type"
        android:id="@+id/allow_txt"
        android:layout_above="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/image.edit"
        android:layout_alignEnd="@+id/image.edit"
        android:inputType="none" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Small"
        android:textOff="Small"
        android:id="@+id/smalldogtoggle"
        android:background="#ffa500"
        android:layout_below="@+id/allow_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="true"
        android:enabled="true"
        android:layout_toLeftOf="@+id/mediumdogtoggle"
        android:layout_toStartOf="@+id/mediumdogtoggle" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium"
        android:textOn="Medium"
        android:textOff="Medium"
        android:id="@+id/mediumdogtoggle"
        android:background="#ffa500"
        android:layout_alignTop="@+id/smalldogtoggle"
        android:layout_toRightOf="@+id/allow_txt"
        android:checked="true"
        android:clickable="false"
        android:layout_toLeftOf="@+id/largedogtoggle"
        android:layout_toStartOf="@+id/largedogtoggle" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="large"
        android:textOn="Large"
        android:textOff="Large"
        android:background="#ffa500"
        android:id="@+id/largedogtoggle"
        android:layout_alignTop="@+id/editText"
        android:layout_toLeftOf="@+id/editText"
        android:layout_toStartOf="@+id/editText"
        android:checked="false"
        android:enabled="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/Address"
        android:hint="@string/address"
        android:layout_below="@+id/smalldogtoggle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/largedogtoggle"
        android:layout_alignEnd="@+id/largedogtoggle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_below="@+id/Address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/largedogtoggle"
        android:layout_alignEnd="@+id/largedogtoggle"
        android:hint="@string/description" />

</RelativeLayout>