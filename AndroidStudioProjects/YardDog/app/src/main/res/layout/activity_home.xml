<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="droidrage.yarddog.Home"
    android:background="@color/green"
    android:id="@+id/action_bar">

    <Button
        android:background="@drawable/red_button"
        android:id="@+id/findAYardButton"
        android:layout_width="fill_parent"
        android:layout_height="66dp"
        android:text="@string/findAYardButtonText"
        style="@style/button_text"
        android:layout_below="@+id/homeLogo"
        android:layout_alignLeft="@+id/openYard"
        android:layout_alignStart="@+id/openYard"
        android:layout_marginBottom="50dp"/>

    <Button
        android:background="@drawable/red_button"
        android:id="@+id/profileButton"
        android:layout_width="fill_parent"
        android:layout_height="66dp"
        android:text="@string/profileButtonText"
        style="@style/button_text"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/openYard"
        android:layout_alignEnd="@+id/openYard" />

    <Button
        android:background="@drawable/red_button"
        android:id="@+id/openYard"
        android:layout_width="fill_parent"
        android:layout_height="66dp"
        android:text="@string/openYardButtonText"
        style="@style/button_text"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/yarddoglogo2" />
</RelativeLayout>
